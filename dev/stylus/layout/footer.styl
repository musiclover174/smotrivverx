.footer
  mt 150px
  pt 70px
  pb 46px
  c white
  @media $lDesktopMax
    mt 132px
    pt 74px
  @media $LandscapeMax
    mt 95px
  @media $LandscapeMedium
    pt 50px
  @media $PortraitMedium
    pt 40px
    pb 36px
  &_dark
    c $dark
    mt 0
    background url('../i/fbg.jpg') no-repeat top center
    background-size cover
    max-height 0
    padding 0
    oh()
    transition .7s padding, 1.2s max-height
  &__row
    df()
    flex-wrap wrap
    ml -22px
    mr -22px
    @media $lDesktopMax
      margin 0 -15px
    @media $desktopMedium
      margin 0 -10px
    @media $LandscapeMin
      &:first-child
        dn()
    & + &
      pos relative
      mt 74px
      pt 53px
      @media $lDesktopMax
        pt 44px
      @media $LandscapeMedium
        mt 38px
        justify-content space-between
      @media $LandscapeMin
        mt 0
        pt 0
      @media $PortraitMedium
        flex-direction column
      & ^[0]__col_col4
        text-align right
      &:before
        content ""
        pos absolute
        t 0
        l 22px
        r 22px
        h 1px
        bgc alpha(white, .3)
        @media $desktopMedium
          l 10px
          r 10px
        @media $LandscapeMin
          dn()
  &__col
    padding 0 22px
    @media $lDesktopMax
      padding 0 15px
    @media $desktopMedium
      padding 0 10px
    @media $PortraitMedium
      flex 0 0 100%
      max-width 100%
    @media (max-width:767px) and (min-width:501px)
      flex 0 0 50%
      max-width 50%
      &:last-child
        text-align right
    @media $LandscapeMedium
      &_menu
        dn()
      &_info
        df(flex-start, space-between)
        flex 0 0 100%
        max-width 100%
    @media $LandscapeMediumMin
      &_col2
        flex 0 0 16.66666%
        max-width 16.66666%
      &_col4
        flex 0 0 33.33333%
        max-width 33.33333%
      &_col8
        flex 0 0 66.66666%
        max-width 66.66666%
  &__item
    & + &
      mt 10px
    &_parent + &
      mt 14px
      @media $lDesktopMax
        mt 17px
    &_parent
      font-weight 700
      & + &
        mt 25px
    &-href
      c inherit
      fontify 18px inherit 28px
      border-bottom 1px solid alpha(white, .5)
      transition .7s border-color
      @media $lDesktopMax
        fontify 16px inherit 26px
      &:hover,
      &_active
        border-color transparent
      &_active
        opacity .75
  &__copy
    @media $PortraitMedium
      mb 30px
  &__phones
    dfv()
    pos relative
    pl 31px
    &:before
      content ""
      pos absolute
      l 0
      t 8px
      size 17px
      background url('data:image/png;base64,') no-repeat center
      @media $lDesktopMax
        t 6px
  &__phone
    c inherit
    fontify 18px 700 28px
    @media $lDesktopMax
      fontify 16px 700 26px
    & + &
      mt 10px
  &__address
    pos relative
    fontify 18px 400 28px
    pl 31px
    mt 22px
    @media $lDesktopMax
      fontify 16px 400 26px
      mt 25px
    @media $LandscapeMedium
      mt 0
    &:before
      content ""
      pos absolute
      l 0
      t 6px
      size 15px 19px
      background url('data:image/png;base64,') no-repeat center
      @media $lDesktopMax
        t 4px
  &__mail
    pos relative
    ib()
    c inherit
    fontify 18px 400 22px
    border-bottom 1px solid 
    ml 31px
    mt 27px
    transition .7s border
    @media $lDesktopMax
      fontify 16px 400 20px
      mt 29px
    @media $LandscapeMedium
      mt 0
    &:before
      content ""
      pos absolute
      l -32px
      t 6px
      size 21px 15px
      background url('data:image/png;base64,') no-repeat center
      @media $lDesktopMax
        l -31px
        t 4px
    &:hover
      border-color transparent
  &__dextra
    ib()
    pos relative
    text-align left
    color inherit
    font-family Verdana, Geneva, sans-serif
    fontify 9px 400 14px
    text-transform uppercase
    letter-spacing 0.18em
    ml 80px
    mt -5px
    span
      pos absolute
      t 3px
      r calc(100% + 11px)
      bgc white
      c $dark
      font-family Arial
      fontify 12px 900 21px
      text-transform uppercase
      letter-spacing 0.1em
      padding 0 4px
      border-radius 2px
      transition .7s background, .7s color
    &:hover span
      c white
      bgc $dblue

.footer:not(.footer_dark)
  .footer__phones:before,
  .footer__address:before,
  .footer__mail:before
    filter brightness(0%) invert(1)