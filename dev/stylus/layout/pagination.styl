.pagination
  display flex
  justify-content center
  align-items flex-start
  mt 40px
  @media $LandscapeMin
    mt 20px
  &__prev,
  &__next
    ib()
    pos relative
    size 48px
    outline none
    transition .7s opacity
    @media $PortraitMax
      size 35px
    &:before
      content ""
      pos absolute
      l 50%
      t 50%
      size 20px 16px
      background url('data:image/png;base64,') no-repeat center
      transition .7s background
      mt -7px
      ml -8px
    &:not(.disabled):hover
      &:before
        background url('data:image/png;base64,') no-repeat center
    &.disabled
      opacity .1
      border-bottom transparent
  &__prev
    mr 19px
    @media $PortraitMax
      mr 15px
  &__next
    transform scaleX(-1)
    ml 19px
    @media $PortraitMax
      ml 15px
  &__list
    display flex
  &__item
    text-align center
    color $dark
    size 48px
    display flex
    align-items center
    justify-content center
    border-radius 50%
    border 2px solid transparent
    fontify 18px 600 48px
    @media $desktopMax
      fontify 16px 600 40px
    @media $PortraitMax
      size 35px
      line-height 35px
    @media $LandscapeMinFrom
      & + &
        ml 10px
    &.active
      border-color $blue
    &-href
      pos relative
      color $dark
      fontify 18px 600 20px
      transition .7s border
      border-bottom 1px solid $blue
      transition .7s color, .7s border
      @media $desktopMax
        fontify 16px 600 18px
      &:not(a):after
        border-color transparent
      &:hover
        color $blue
        border-color transparent
      ^[-1].active &
        color $blue
        border-color transparent
