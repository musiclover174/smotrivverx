.header
  bgc white
  @media $LandscapeMinFrom
    df(center, space-between)
    pos absolute
    z-index 2
    w 100%
    h 100px
    padding 0 90px
    max-width 1600px
    l 50%
    t 40px
    transform translateX(-50%)
  @media $LandscapeMin
    pos fixed
    t 0
    l 0
    w 100%
    padding 15px 0
    z-index 5
    box-shadow 0 3px 34.3px 0.7px rgba(112,118,126,0.15)
  &__img
    max-width 100%
  &__contact
    pos relative
    pr 52px
    text-align right
    mt -3px
    &:after
      content ""
      pos absolute
      r 0
      t 2px
      size 38px
      background url('data:image/png;base64,') no-repeat center $blue
      box-shadow 0 4px 9px rgba(0, 81, 158, 0.31)
      border-radius 50%
    &-row
      & + &
        mt 6px
  &__phone
    c black
    fontify 18px 700 18px
    white-space nowrap
  &__feed
    ib()
    mr 3px
    c $blue
    fontify 16px 700 16px
    border-bottom 1px dashed $blue
    transition .7s border
    &:hover
      border-color transparent