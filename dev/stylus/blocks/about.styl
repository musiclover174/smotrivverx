.about
  pos relative
  z-index 1
  padding 1px 0 67px
  @media $lDesktopMax
    pb 55px
  &__top
    pos absolute
    l -5px
    t 831px
    w 676px
    df(center, flex-start)
    transform rotate(90deg) scaleX(-1) scaleY(-1)
    transform-origin 0 0
    @media $lDesktopMax
      t 663px
      l -2px
      w 576px
    .common__spacer
      opacity .3
  &__block
    margin -95px 90px 0 140px
    padding 95px 0 60px 93px
    background-size cover
    background-repeat no-repeat
    background-position top center
    @media $lDesktopMax
      margin -52px 75px 0 111px
      padding 52px 0 40px 52px
  &__text
    padding 51px 70px
    bgc white
    max-width 652px
    mb 160px
    @media $lDesktopMax
      max-width 533px
      padding 32px 50px
      mb 144px
  &__img
    db()
    ml auto
    mr -93px
    @media $lDesktopMax
      mr -78px
      max-width 402px
  &__info
    df(flex-start, flex-end)
    flex-wrap wrap
    c white
    margin 60px -22px 0
    @media $lDesktopMax
      margin 60px -15px 0
    @media $desktopMedium
      ml -10px
      mr -10px
    &-digit
      fontify 70px 700 70px
      @media $lDesktopMax
        fontify 50px 700 50px
    &-text
      fontify 18px 400 22px
      mt 16px
      pl 3px
      @media $lDesktopMax
        fontify 16px 400 20px
        mt 12px
  &__col
    padding 0 22px
    @media $lDesktopMax
      padding 0 15px
    @media $desktopMedium
      padding 0 10px
    @media $PortraitMedium
      flex 0 0 100%
      max-width 100%
      & + &
        mt 20px
    @media (max-width:950px) and (min-width:501px)
      flex 0 0 50%
      max-width 50%
    @media $LandscapeMediumMin
      &_col2
        flex 0 0 16.666666%
        max-width 16.666666%