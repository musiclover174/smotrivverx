.about
  pos relative
  z-index 1
  padding 1px 0 67px
  &__top
    pos absolute
    l -5px
    t 831px
    width 676px
    df(center, flex-start)
    transform rotate(90deg) scaleX(-1) scaleY(-1)
    transform-origin 0 0
    .common__spacer
      opacity .3
  &__block
    margin -95px 90px 0 140px
    padding 95px 0 60px 93px
    background-size cover
    background-repeat no-repeat
    background-position top center
  &__text
    padding 51px 70px
    bgc white
    max-width 652px
    mb 160px
  &__img
    db()
    ml auto
    mr -93px
  &__info
    df(flex-start, flex-end)
    flex-wrap wrap
    c white
    margin 60px -22px 0
    @media $desktopMedium
      ml -10px
      mr -10px
    &-digit
      fontify 70px 700 70px
    &-text
      fontify 18px 400 22px
      mt 16px
      pl 3px
  &__col
    padding 0 22px
    @media $desktopMedium
      padding 0 10px
    @media $PortraitMedium
      flex 0 0 100%
      max-width 100%
      & + &
        mt 20px
    @media (max-width:950px) and (min-width:501px)
      flex 0 0 50%
      max-width 50%
    @media $LandscapeMediumMin
      &_col2
        flex 0 0 16.666666%
        max-width 16.666666%