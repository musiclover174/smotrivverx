.features
  padding 160px 0
  &__top
    pos absolute
    l -5px
    t 663px
    width 694px
    df(center, flex-start)
    transform rotate(90deg) scaleX(-1) scaleY(-1)
    transform-origin 0 0
  &__block
    pl 230px
    df(center, flex-start)
  &__list
    df(flex-start, space-between)
    flex-wrap wrap
    w calc(50% - 97px)
    pt 35px
  &__item
    w calc(50% - 22px)
    mb 50px
    &-iconover
      df(flex-end, flex-start)
      h 75px
    &-icon
      max-width 100%
      max-height 100%
    &-title
      c $dark
      fontify 18px 700 22px
      mt 24px
  &__gallery
    &-bg
      pos absolute
      t -160px
      b -160px
      l calc(50% - 30px)
      w 40vw
    &-wrapper
      pos relative
      w calc(50% + 77px)
      ml 20px
    &-car
      w calc(100% - 60px)
      ml 0
      .swiper-slide
        pt 100%
        border-radius 50%
        oh()
        background-size cover
        background-repeat no-repeat
        background-position center