.features
  padding 160px 0
  @media $lDesktopMax
    padding 138px 0
  @media $LandscapeMax
    padding 95px 0 0
  &__top
    pos absolute
    l -5px
    t 663px
    w 694px
    df(center, flex-start)
    transform rotate(90deg) scaleX(-1) scaleY(-1)
    transform-origin 0 0
    @media $lDesktopMax
      l -2px
      t 500px
      w 529px
    @media $LandscapeMax
      t 0
      w 100%
      l 0
      transform none
      pos relative
      mb 60px
  &__block
    pl 230px
    df(center, flex-start)
    @media $lDesktopMax
      pl 190px
      align-items flex-start
    @media $desktopMin
      pl 120px
    @media $LandscapeMax
      pl 0
  &__list
    df(flex-start, space-between)
    flex-wrap wrap
    w calc(50% - 97px)
    pt 35px
    @media $lDesktopMax
      pt 22px
    @media $LandscapeMax
      pt 0
      w calc(50% - 20px)
    @media $LandscapeMedium
      w 100%
  &__item
    w calc(50% - 22px)
    mb 50px
    @media $lDesktopMax
      mb 42px
    @media $LandscapeMedium
      w calc(100% / 3 - 22px)
    @media $PortraitMax
      w calc(50% - 22px)
    @media $Mobile370
      w 100%
      br
        dn()
    &-iconover
      df(flex-end, flex-start)
      h 75px
    &-icon
      max-width 100%
      max-height 100%
    &-title
      c $dark
      fontify 18px 700 22px
      mt 24px
      @media $lDesktopMax
        fontify 16px 700 20px
        mt 16px
  &__gallery
    &-bg
      pos absolute
      t -160px
      b -160px
      l calc(50% - 30px)
      w 40vw
      @media $lDesktopMax
        t -138px
        b -138px
      @media $LandscapeMax
        dn()
    &-wrapper
      pos relative
      w calc(50% + 77px)
      ml 20px
      @media $lDesktopMax
        ml 55px
        w calc(50% + 42px)
      @media $LandscapeMax
        w calc(50% - 20px)
        ml 20px
      @media $LandscapeMedium
        dn()
    &-car
      w calc(100% - 60px)
      ml 0
      @media $desktopMin
        w 100%
      .swiper-slide
        pt 100%
        border-radius 50%
        oh()
        background-size cover
        background-repeat no-repeat
        background-position center