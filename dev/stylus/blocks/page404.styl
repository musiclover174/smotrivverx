.page404
  max-width 470px
  pt 30px
  margin 0 auto
  text-align center
  @media $desktopMax
    pt 5px
  @media $desktopMin
    pt 50px
  h1:not([class])
    margin 18px 0 24px
    @media $desktopMax
      mt 11px
  &__img
    max-width 100%

.map
  max-width 470px
  margin 67px auto 0
  text-align center
  &__title
    c $dark
    fontify 26px 700 30px
    mb 29px
  &__item
    & + &
      mt 28px
    &-href
      c $dark
      fontify 18px 400 25px
      border-bottom 1px solid $blue
      transition .7s border-color
      &_main
        font-weight 700
      &:hover
        border-color transparent
  &__sublist
    mt 10px
    &-item
      & + &
        mt 10px