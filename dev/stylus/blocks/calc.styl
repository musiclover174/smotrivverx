.calc
  @media $Mobile370
    margin 0 -20px
  &__title
    c $dark
    fontify 22px 400 28px
    mb 55px
  &__list
    df(flex-start, space-between)
    bgc white
    padding 60px 78px
    @media $desktopMax
      padding 50px 60px
    @media $desktopMin
      padding 50px
    @media $LandscapeMin
      flex-direction column
      justify-content flex-start
      align-items center
    @media $PortraitMedium
      padding 30px
  &__item
    w calc(100% / 3 - 40px)
    max-width 410px
    text-align center
    @media $desktopMin
      w calc(100% / 3 - 20px)
    @media $LandscapeMin
      w 100%
      & + &
        mt 60px
    &-imgover
      db()
      oh()
      pos relative
      pt 100%
      mb 30px
      &:hover ^[-1]-img
        transform scale(1)
      &:hover + ^[-1]-name
        border-color transparent
        c $blue
    &-img 
      pos absolute
      t 0
      l 0
      size 100%
      object-fit cover
      font-family 'object-fit: cover;'
      transform scale(1.02)
      transition 2s transform
      will-change transform
    &-name
      c $dark
      fontify 26px 700 34px
      border-bottom 1px solid $blue
      transition .7s border, .7s color
      @media $desktopMax
        fontify 22px 700 32px
      @media $LandscapeMax
        fontify 20px 700 30px
      &:hover
        border-color transparent
        c $blue
  &__inner
    padding 73px 136px 80px
    bgc white
    @media $desktopMax
      padding 70px 109px 80px
    @media $LandscapeMedium
      padding 50px
    @media $PortraitMedium
      padding 30px
    @media $Mobile370
      padding 20px
  &__form
    &-title
      c $dark
      fontify 22px 400 34px
      mb 43px
      @media $desktopMax
        fontify 20px 400 32px
        mb 44px
      @media $PortraitMedium
        fontify 18px 400 28px
        mb 34px
  &__computation
    dn()
    mt 70px
    @media $desktopMax
      mt 54px
    &-title
      c $dark
      fontify 38px 700 46px
      mb 30px
      @media $desktopMax
        fontify 26px 700 30px
        mb 35px
    &-hint
      c $dark
      fontify 18px 400 28px
      mt 30px
      @media $desktopMax
        fontify 16px 400 26px
        mt 38px
    &-btnover
      text-align center
      mt 34px
  &__feed
    dn()
    mt 63px
    @media $desktopMax
      mt 67px
    &-title
      c $dark
      fontify 18px 400 28px
      mb 13px
      @media $desktopMax
        fontify 16px 400 26px
        mb 12px
    &-hint
      c $dark
      fontify 18px 400 28px
      mb 24px
      @media $desktopMax
        fontify 16px 400 26px
        mb 34px
    &-sbm
      mt 1px
      @media $desktopMax
        mt 6px
      @media $LandscapeMin
        mt 27px
  &__sbm
    @media $LandscapeMin
      mt 27px
  &__spacer
    dn()
  &__clear
    dn()
    pos relative
    mt 15px
    c $dark
    fontify 18px 700 20px
    border-bottom 1px dashed $blue
    transition .7s border-color
    @media $desktopMax
      fontify 16px 700 18px
      mt 22px
    @media $LandscapeMin
      mt 10px
    &:after
      content ""
      pos absolute
      t 5px
      r -22px
      size 12px 12px
      background url('data:image/png;base64,') no-repeat center
    &:hover
      border-color transparent
  &[data-step="1"] ^[0]__spacer
    db()
  &[data-step="2"],
  &[data-step="3"]
    & ^[0]__clear
      ib()
    & ^[0]__computation
      db()
  &[data-step="3"]
    & ^[0]__computation-btnover
      dn()
    & ^[0]__feed
      db()