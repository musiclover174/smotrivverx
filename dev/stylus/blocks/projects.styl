body.index .projects
  mt 177px
  @media $lDesktopMax
    mt 157px
  @media $LandscapeMax
    mt 95px

.projects
  &__top
    @media $PortraitMaxFrom
      df(center, flex-start)
    pos absolute
    l -5px
    t 746px
    width 747px
    transform rotate(90deg) scaleX(-1) scaleY(-1)
    transform-origin 0 0
    @media $lDesktopMax
      l -2px
      t 600px
      w 605px
    @media $LandscapeMax
      t 0
      w 100%
      l 0
      transform none
      pos relative
      mb 60px
  &__car
    h 100%
    &-wrapper
      h 805px
      pl 140px
      pr 60px
      @media $lDesktopMax
        pl 111px
        h 640px
      @media $LandscapeMax
        pl 0
        pos relative
      @media $LandscapeMedium
        max-height 80vh
      @media $PortraitMedium
        pr 35px
      .swiper-slide
        &-active ^[0]__item-side
          opacity 1
        &-active ^[0]__item-content
          opacity 1
          visibility visible
        & ^[0]__item-date
          @media $PortraitMedium
            c alpha(white, .5)
        & ^[0]__item-title
          @media $PortraitMedium
            c white
      .swiper-buttons
        size 0
        pos absolute
        r -4px
        t 50%
        transform translateY(-50%) rotate(90deg)
      .swiper-pagination
        pos relative
        margin -2px 30px 0
      .swiper-button-prev
        mr 0
  &__rotator
    df()
    h 16px
    white-space nowrap
    pos relative
    l 50%
    transform translateX(-50%)
  &__item
    df(center, flex-start)
    pos relative
    h 100%
    &-side
      w calc(50% + 78px)
      mr 60px
      pos relative
      min-height 100%
      oh()
      opacity .2
      transition .7s opacity
      @media $lDesktopMax
        w calc(50% + 70px)
      @media $LandscapeMax
        w calc(50% - 15px)
        mr 30px
      @media $PortraitMedium
        pos absolute
        size 100%
        mr 0
    &-imgover
      db()
      pos relative
      w 100%
      pt 49%
      oh()
      mb 20px
      &:hover > ^[-1]-img
        transform scale(1)
    &-img
      pos absolute
      l 0
      t 0
      r 0
      b 0
      background-size cover
      background-repeat no-repeat
      background-position top center
      &:not([href])
        transform scale(1.02)
        transition 2s transform
        will-change transform
    &-content
      padding 30px 0
      w calc(50% - 138px)
      visibility hidden
      opacity 0
      transition .7s opacity, .7s visibility
      @media $lDesktopMax
        padding 20px 0
        w calc(50% - 130px)
      @media $LandscapeMax
        w calc(50% - 15px)
      @media $PortraitMedium
        size 100%
        pos relative
        z-index 1
        padding 30px
        bgc alpha(black, .6)
      @media $Mobile370
        padding 20px
    &-date
      c alpha($dark, .5)
      fontify 16px 400 26px
      mb 11px
      @media $lDesktopMax
        fontify 14px 400 26px
      @media $LandscapeMin
        mb 4px
    &-title
      c $dark
      fontify 26px 700 38px
      border-bottom 1px solid $blue
      transition .7s border, .7s color
      @media $lDesktopMax
        fontify 22px 700 32px
      @media $LandscapeMax
        fontify 18px 700 26px
      @media $PortraitMediumFrom
        &:hover
          c $blue
      &:hover
        border-color transparent
  &__list
    df()
    flex-wrap wrap
    ml -44px
    w calc(100% + 44px)
    @media $desktopMax
      ml -30px
      w calc(100% + 30px)
    @media $LandscapeMin
      flex-direction column
    &-item
      ml 44px
      w calc(50% - 44px)
      mb 70px
      @media $desktopMax
        ml 30px
        w calc(50% - 30px)
        mb 60px
      @media $LandscapeMin
        w calc(100% - 30px)
  &__elem
    &-date
      ib()
      margin 5px 0 3px
      pos relative
      c alpha($dark, .5)
      fontify 16px 400 18px
      @media $desktopMax
        fontify 14px 400 16px
    &-carover
      pos relative
      margin 33px 0
      .swiper-slide
        background-size cover
        background-position center
        background-repeat no-repeat
    &-car
      .swiper-slide
        h 630px
        @media $desktopMax
          h 500px
        @media $PortraitMax
          h 300px
        .glightbox
          db()
          h 100%
    &-thumbs
      &-wrapper
        pos relative
        padding 0 50px
        mt 18px
        @media $PortraitMax
          padding 0 30px
          mt 14px
        .swiper-buttons
          pos absolute
          t calc(50% - 8px)
          h 0
          l 0
          w 100%
          max-width 100%
          z-index 1
          justify-content space-between
      .swiper-slide
        cursor pointer
        pt 11%
        @media $desktopMax
          pt 15%
        &:before
          content ""
          pos absolute
          t 0
          l 0
          background url('data:image/png;base64,') no-repeat center $blue
          size 100%
          opacity 0
          transition .7s opacity
        &:hover:before
          opacity .89
        @media $LandscapeMin
          pt 18%
        @media $PortraitMedium
          pt 28%
        &:after
          content ""
          pos absolute
          l 0
          r 0
          b 0
          t 0
          border 2px solid transparent
          transition .7s after
        &-thumb-active:after
          border-color $blue