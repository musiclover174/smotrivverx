.projects
  mt 177px
  @media $lDesktopMax
    mt 157px
  @media $LandscapeMax
    mt 95px
  &__top
    @media $PortraitMaxFrom
      df(center, flex-start)
    pos absolute
    l -5px
    t 746px
    width 747px
    transform rotate(90deg) scaleX(-1) scaleY(-1)
    transform-origin 0 0
    @media $lDesktopMax
      l -2px
      t 600px
      w 605px
    @media $LandscapeMax
      t 0
      w 100%
      l 0
      transform none
      pos relative
      mb 60px
  &__car
    h 100%
    &-wrapper
      h 805px
      pl 140px
      pr 60px
      @media $lDesktopMax
        pl 111px
        h 640px
      @media $LandscapeMax
        pl 0
        pos relative
      @media $LandscapeMedium
        max-height 80vh
      @media $PortraitMedium
        pr 35px
      .swiper-slide
        &-active ^[0]__item-img
          opacity 1
        &-active ^[0]__item-content
          opacity 1
          visibility visible
      .swiper-buttons
        size 0
        pos absolute
        r -4px
        t 50%
        transform translateY(-50%) rotate(90deg)
      .swiper-pagination
        pos relative
        margin -2px 30px 0
      .swiper-button-prev
        mr 0
  &__rotator
    df()
    h 16px
    white-space nowrap
    pos relative
    l 50%
    transform translateX(-50%)
  &__item
    df(center, flex-start)
    pos relative
    h 100%
    &-side
      w calc(50% + 78px)
      mr 60px
      pos relative
      min-height 100%
      oh()
      @media $lDesktopMax
        w calc(50% + 70px)
      @media $LandscapeMax
        w calc(50% - 15px)
        mr 30px
      @media $PortraitMedium
        pos absolute
        size 100%
        mr 0
    &-img
      pos absolute
      l 0
      t 0
      r 0
      b 0
      opacity .2
      background-size cover
      background-repeat no-repeat
      background-position top center
      transition .7s opacity
    &-content
      padding 30px 0
      w calc(50% - 138px)
      visibility hidden
      opacity 0
      transition .7s opacity, .7s visibility
      @media $lDesktopMax
        padding 20px 0
        w calc(50% - 130px)
      @media $LandscapeMax
        w calc(50% - 15px)
      @media $PortraitMedium
        size 100%
        pos relative
        z-index 1
        padding 30px
        bgc alpha(black, .6)
      @media $Mobile370
        padding 20px
    &-date
      c alpha($dark, .5)
      fontify 16px 400 26px
      mb 11px
      @media $lDesktopMax
        fontify 14px 400 26px
      @media $PortraitMedium
        c alpha(white, .5)
    &-title
      c $dark
      fontify 26px 700 38px
      border-bottom 1px solid $blue
      transition .7s border
      @media $lDesktopMax
        fontify 22px 700 32px
      @media $LandscapeMax
        fontify 18px 700 26px
      @media $PortraitMedium
        c white
      &:hover
        border-color transparent